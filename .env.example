# Ace Stream Engine configuration
# Copy this file to .env and customize the values

# Ace Stream Engine address (format: host:port)
# Examples:
#   - Local server / Gluetun docker: 127.0.0.1:6878
#   - Remote server: acestream.example.com:6878
#   - Docker acestream-http-proxy: acestream-http-proxy:6878
ACESTREAM_ENGINE_ADDR=127.0.0.1:6878

# HTTPAceProxy address (format: host:port)
# Examples:
#   - Local proxy: 127.0.0.1:8000
#   - Remote proxy: proxy.example.com:8000
#   - Docker network: httpaceproxy:8000
HTTPACEPROXY_ADDR=127.0.0.1:8000

# Refresh interval in minutes (default: 720 = 12 hours)
# Examples:
#   - Every 30 minutes: 30
#   - Every hour: 60
#   - Every 6 hours: 360
#   - Every 12 hours: 720
#   - Every 24 hours: 1440
REFRESH_INTERVAL_MINUTES=720

# Nginx port to expose (default: 8080) served playlists will be 
# accessible at http://localhost:<NGINX_PORT>
NGINX_PORT=8080

# Filters (comma-separated for arrays, true/false for booleans)
# Keep only channels matching these name patterns (regex)
NAME_RX_FILTER=
# Example: NAME_RX_FILTER=.*sport.*,.*football.*

# Exclude channels matching these name patterns (regex)
NAME_RX_BLACKLIST=
# Example: NAME_RX_BLACKLIST=.*test.*,.*demo.*,^\P{Cyrillic}*\p{Cyrillic}.*

# Keep only these categories
CATEGORIES_FILTER=
# Example: CATEGORIES_FILTER=sport,movies,music

# Strict category filtering (true/false)
CATEGORIES_FILTER_STRICT=false

# Exclude these categories
CATEGORIES_BLACKLIST=
# Example: CATEGORIES_BLACKLIST=erotic_18_plus,other_18_plus

# Keep only these languages (3-letter codes: eng, rus, fra, etc.)
LANGUAGES_FILTER=
# Example: LANGUAGES_FILTER=eng,fra

# Strict language filtering (true/false)
LANGUAGES_FILTER_STRICT=false

# Exclude these languages
LANGUAGES_BLACKLIST=
# Example: LANGUAGES_BLACKLIST=rus

# Keep only these countries (2-letter codes: us, fr, uk, etc.)
COUNTRIES_FILTER=
# Example: COUNTRIES_FILTER=us,fr,uk

# Strict country filtering (true/false)
COUNTRIES_FILTER_STRICT=false

# Exclude these countries
COUNTRIES_BLACKLIST=
# Example: COUNTRIES_BLACKLIST=cn,ru
